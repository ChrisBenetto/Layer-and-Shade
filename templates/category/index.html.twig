{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des catégories
{% endblock %}

{% block body %}
	<h1>Catégories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Créée le </th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td>{{ category.createAt ? category.createAt|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
						<a href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
						<a href="{{ path('category_delete', {'id': category.id}) }}">Supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('category_new') }}">Ajouter une catégorie</a>
{% endblock %}
